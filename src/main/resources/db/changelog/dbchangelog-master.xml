<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="tabla_persona" author="Weslly Cabrera">
        <createTable tableName="persona">
            <column name="id_persona" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="nombre" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="id_direccion" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="id_tipo_documento" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

