<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-table_pais" author="Grupo1(Carlos Altan, Joshua Rosselin)">
        <createTable tableName="pais">
            <column name="pais_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nombre" type="varchar(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="create-table_departamento" author="Grupo1(Carlos Altan, Joshua Rosselin)">
        <createTable tableName="departamento">
            <column name="departamento_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nombre" type="varchar(50)"/>
            <column name="pais_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="departamento" baseColumnNames="pais_id"
                                 referencedTableName="pais" referencedColumnNames="pais_id"
                                 constraintName="fk_departamento_pais"/>
    </changeSet>

    <changeSet id="create-table-municipio" author="Grupo 2 : Hernán Misael López Pérez">
        <createTable tableName="municipio" remarks="Es la tabla de municipio">
            <column name="municipio_id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="nombre" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="departamento_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="municipio" baseColumnNames="departamento_id"
                                 referencedTableName="departamento" referencedColumnNames="departamento_id"
                                 constraintName="fk_municipio_departamento"/>
    </changeSet>

    <changeSet id="insert-data-pais" author="Grupo1(Carlos Altan, Joshua Rosselin)">
        <insert tableName="pais">
            <column name="nombre" value="Guatemala"/>
        </insert>
    </changeSet>

    <changeSet id="create-table-user" author="Douglas Alvarado">
        <createTable remarks="remarks"
                tableName="user">
            <column name="user_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(50)"/>
            <column name="password" type="varchar(100)"/>
        </createTable>
    </changeSet>

    <changeSet id="alter-table-user" author="echamale">
        <renameTable oldTableName="user" newTableName="users"/>
    </changeSet>
    
    <changeSet id="drop-users" author="echamale">
        <dropTable tableName="users"/>
    </changeSet>

    <changeSet id="create-table-direccion" author="gerson chuquiej">
        <createTable tableName="direccion">
            <column name="direccion_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="calle" type="varchar(255)"/>
            <column name="number_home" type="varchar(255)"/>
            <column name="id_municipio" type="int"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="direccion"
                                 baseColumnNames="id_municipio"
                                 referencedTableName="municipio"
                                 referencedColumnNames="municipio_id"
                                 constraintName="fk_direccion_municipio"/>
    </changeSet>

    <changeSet id="insert-data-direccion" author="Gerson Chuquiej">
        <insert tableName="direccion">
            <column name="calle" value="Tierra colorada"/>
            <column name="number_home" value="123"/>
            <column name="id_municipio" value="1"/>
        </insert>
    </changeSet>
</databaseChangeLog>